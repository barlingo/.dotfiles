{
    "diagnostic.errorSign": "✖",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "ℹ",
    "diagnostic.hintSign": "➤",
    "suggest.noselect": false,
    "suggest.echodocSupport": true,
    "codeLens.enable": true,
    "signature.enable": true,
    "suggest.preferCompleteThanJumpPlaceholder": true,
    "python.pythonPath" : ".env/bin/python",
    "python.venvFolders": ["envs",".pyenv",".direnv",
                           "~/.virtualenvs", "venv", ".env"],
    "python.workspaceSymbols.exclusionPatterns": [],
    "python.jediEnabled": false,
    "python.linting.pylintEnabled": true,
    "python.linting.pylintArgs": ["--load-plugins", "pylint_django"],
    "python.formatting.blackPath":"~/.local/bin/black",
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",
    "python.linting.pylintPath": "~/.virtualenvs/neovim3/bin/pylint",
    "python.autoComplete.extraPaths": ["venv", ".env"],
    "python.linting.flake8Path": "~/.virtualenvs/neovim3/bin/flake8",
    "coc.preferences.rootPatterns": [".git", ".hg", ".projections.json",
                                     "venv", ".env"]

}
